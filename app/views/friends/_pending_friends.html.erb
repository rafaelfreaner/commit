<% unless user.pending_friends.empty? %>
  <% user.pending_friends.each do |user| %>
    <%= link_to user.username, user_path(user.username) %>
    Since <%= user.created_at.to_s(:long) %>
    for <%= user.friendships.event %>
      <% if signed_in? && @user = current_user %>
      <%= link_to '[Accept]', user_friend_path(user_id: current_user, id: user), method: :patch, data: { confirm: "Accept friend?"} %>
      <%= link_to '[Reject]', user_friend_path(user_id: current_user, id: user), method: :delete, data: { confirm: "Sure you want to delete?" } %>
    <% end %>
  <% end %>
  <% else %>
  None
<% end %>