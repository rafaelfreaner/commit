<% unless user.requested_friends.empty? %>
  <% user.requested_friends.each do |user| %>
    <%= link_to user.username, user_path(user.username) %>
    <h4> Since <%= user.created_at.to_s(:long) %>
      <% if signed_in? && user == current_user %>
        <%= link_to '[Cancel]', user_friend_path(user_id: current_user, id: user), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
  <% end %>
<% else %>
  None
<% end %>